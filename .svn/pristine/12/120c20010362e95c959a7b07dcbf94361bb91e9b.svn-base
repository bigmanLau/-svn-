/* pages/xieyixiangqing/index.wxss */
page{
  background: #f5f5f5;
}
.container{
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  left: 32rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 15rpx RGBA(130, 130, 130, 0.3);
  overflow: hidden;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 20rpx 16rpx;
  font-size: 0;
}
.container-info{
  font-size: 24rpx;
  line-height: 1.5;
  color: #4a4a4a;
}
.container-button{
  width: 150rpx;
  line-height: 50rpx;
  border: 2rpx solid #2a9ef1;
  color: #2a9ef1;
  font-size: 30rpx;
  text-align: center;
  display: block;
  margin: 40rpx auto 25rpx;
  border-radius: 10rpx;
}