/* pages/anquanzhongxin/index.wxss */
/**index.wxss**/
page{
  background: #f5f8fa;
}
.container {

  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.user-container{
   position: relative;
   width: 750rpx;
}
.userbg{
  width: 750rpx;
height: 368rpx;
}
.bg-class{
    width: 750rpx;
height: 368rpx;
}
.icon_1{
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}
.userinfo-avatar {
  width: 126rpx;
  height: 126rpx;
 margin-left: 37rpx;
 margin-right: 25rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 28rpx;
}

.weui_cell {
  position: relative;
  display: flex;
  
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  background: white;
  height: 102rpx;
}



.weui_cell_hd  {
  width: 45rpx;
  height: 45rpx;
margin-left: 30rpx;
margin-right: 20rpx;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 29rpx;
  color: #494949;
  margin-left: 20rpx;
}

.badge {
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}

.with_arrow {
  position: absolute;
  top: 18px;
  right: 27rpx;
  width: 15px;
  height: 15px;
 
}
.with_arrow image{
   width: 37rpx;
  height: 37rpx;
}

/**灰色分割区 */



/**线*/
.line{
  height: 1rpx;
  background: #f2f2f2;
  width: 720rpx;
  margin-left: 30rpx;
  
}

.info_list{
  width: 750rpx;
  background: white;
}
.item{
  height: 90rpx;
  width: 100%;
  background: white;
  border-bottom: 1rpx solid #eeeeee;
}
.little_icon{
  width: 32rpx;
}



