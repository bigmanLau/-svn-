.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust: none;
  -webkit-user-select: none;
  font-size: 35rpx;
  margin-top: 20rpx;
  color: #3c3c3c;
  font-family: Helvetica, Arial, "Helvetica Neue", "Droid Sans", "Microsoft YaHei", sans-serif;
}

.canvas {
  width: 100%;
  height: 200px;
}

.container-menu {
  width: calc(100% - 64rpx);
  height: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  box-sizing: border-box;
  margin: 0px 32rpx 0rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: RGBA(247, 247, 247, 1);
}

.container-menu-item {
  flex: 1;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  background: RGBA(247, 247, 247, 1);
  border-radius: 10rpx;
}

.container-menu-item.tag {
  background: RGBA(42, 158, 241, 1);
  color: #fff;
}
.mleft{
   margin-left: 32rpx;
   border-left: 1rpx solid #dadada;
}
.bt{
  border-top: 1rpx solid #dadada;
}

.wrrap {
  margin-top: 36rpx;
  border: 1rpx solid #dadada;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-bottom: 0;

}

.line1 {
  background: #dadada;
  height: 1rpx;
