page {
  background: #f5f8fa;
}

.mytri {
  width: 20rpx;
  height: 20rpx;
  margin-left: 7rpx;
}
.width25{
  width: calc(670rpx/4);
  display: inline-block;
  text-align: center;
}
.blue_line {
  height: 35rpx;
