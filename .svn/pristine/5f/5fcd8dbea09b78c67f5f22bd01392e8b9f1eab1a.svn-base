<form bindsubmit="doRegister" bindreset="">
  <view class="title-content">
    <text class="title">期货淘单</text>
  </view>
  <view class="user-content">
    <text class="user-name">手机号</text>
    <input type="text" class="user-name-input" placeholder="请输入手机号" placeholder-class="user-name-pl" bindchange="bindUserChange" name="username" value="{{username}}" />
  </view>
  <view class="user-content-2">
  <view class="left1">
    <text class="user-name">验证码</text>
    <input type="number" class="user-name-input2" placeholder="请输入验证码" maxlength="6" placeholder-class="user-name-pl" bindchange="bindPassChange" name="password" value="{{password}}" />
   </view>
     <view class="getcode" bindtap="getCode">{{codeTime}}</view>
  </view>
  <button class="login-btn" formType="submit">注册</button>
</form>