/* pages/paisherenlian/index.wxss */

.item {
  height: 90rpx;
  width: 100%;
}

.face_wrap {
  width: 100%;
  height: 505.5rpx;
  margin-top: 15rpx;
}

.face_item {
  border: 1rpx dotted #cdcdcd;
  width: 505.5rpx;
  height: 505.5rpx;
  background: rgba(245, 248, 250, 1);
  opacity: 0.5;
}

.face {
  width: 100rpx;
  height: 100rpx;
}

.mytoastcover {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100vh;
}

.mytoasecontainer {
  position: relative;
}

.left {
  width: 72%;
}

.mytoast {
  position: absolute;
  margin: auto;
  line-height: 160rpx;
  left: 0;
  right: 0;
  top: 330rpx;
  width: 556rpx;
  height: 160rpx;
  background: #000;
  opacity: 0.6;
  border-radius: 30rpx;
}

.my_btn {
  width: 250rpx;
  height: 91rpx;
  line-height: 91rpx;
  border: 1rpx solid rgba(42, 158, 241, 1);
  border-radius: 10px;
  color: #2a9ef1;
  background: white;
  box-shadow: 1px 0px 0px rgba(210, 210, 210, 1);
}
.faceImg{
  width: 505.5rpx;
    height: 505.5rpx;
    opacity: 1;
}
.notransparent{
  opacity: 1;
}
.success{
  width: 114rpx;
  height: 114rpx;
  margin-top: 158rpx;
}