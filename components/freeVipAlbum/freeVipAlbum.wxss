.album-container {
    display: flex;
    flex-direction: column;
}

.album-cover {
    width: 100%;
    padding-bottom: 100%;
    background: #eee center/cover no-repeat;
    margin-bottom: 15rpx;
    border-radius: 6rpx;
    overflow: hidden;
}

.vip-free::before {
    content: '';
    position: absolute;
    width: 60rpx;
    height: 32rpx;
    background: url("data:image/png;base64,") center/cover no-repeat;
    border-radius: 6rpx 0 0 0;
}

.album-tit {
    font-size: 26rpx;
    line-height: 36rpx;
    max-height: 72rpx;
    color: #FEF9F0;
    margin-bottom: 5rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.album-price {
    font-size: 24rpx;
    color: #9FA0A7;
    letter-spacing: 0.34px;
    line-height: 40rpx;
}

.price-count {
    font-size: 28rpx;
    color: #F86442;
    font-weight: bold;
}