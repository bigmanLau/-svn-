<view class="container">
<view class="item-content">
  <view class="item">
    <view class="label">产品名称:</view>
    <view class="text">{{orderInfo.productName}}</view>
  </view>
  <view class="line"></view>


  <view class="item">
    <view class="label">生效时间:</view>
    <view class="text">{{orderInfo.serviceStart}}</view>
  </view>
  <view class="line"></view>

  <view class="item">
    <view class="label">截至时间:</view>
    <view class="text">{{orderInfo.serviceEnd}}</view>
  </view>
  <view class="line"></view>

  <view class="item">
    <view class="label">应付金额:</view>
    <view class="text">{{orderInfo.price}}</view>
  </view>
</view>
<form bindsubmit="pay" bindreset="" report-submit="true">
 <button class="btn"  formType="submit">去支付</button>
 </form>
</view>
 