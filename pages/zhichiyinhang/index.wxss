/* pages/zhichiyinhang/index.wxss */
page{
  background: #f5f5f5;
}
.container{
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  left: 32rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 15rpx RGBA(130, 130, 130, 0.3);
  overflow: hidden;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 20rpx 8rpx;
  font-size: 0;
}
.container-item{
  display: inline-block;
  width: calc((100% / 2) - 56rpx);
  height: 52rpx;
  margin: 30rpx 28rpx;
  box-sizing: border-box;
  border: 1px dotted RGBA(130, 130, 130, 0.3);
  overflow: hidden;
}
.container-item image{
  width: 100%;
}
.container-wrop-title{
  font-size: 36rpx;
  line-height: 50rpx;
  color: RGBA(106, 106, 106, 1);
  box-sizing: border-box;
  padding: 25rpx 24rpx 20rpx;
}
.container-wrop-info{
  font-size: 24rpx;
  color: RGBA(119, 119, 119, 1);
  line-height: 1.5;
  padding-bottom: 20rpx;
}