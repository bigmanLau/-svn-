page{
  background: #fff;
}
.container{
  width: 100%;
  height: auto;
}
.container-item{
  width: calc(100% - 64epx);
  margin-left: 32rpx;
  margin-right: 32rpx;
  padding: 20rpx 0;
  position: relative;
  border-bottom: 1rpx solid #cdcdcd;
  margin-top: 0;
}
.container-item-title{
  width: calc(100% - 50rpx);
  display: inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #3c3c3c;
}
.container-item-change{
  width: calc(100% - 64epx);
  margin-left: 32rpx;
  margin-right: 32rpx;
  padding: 0 0;
  margin-top: 60rpx;
}
.container-item-change .icon{
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  vertical-align: top;
  margin-right: 10rpx;
}
.container-item-change .icon image{
  width: 100%;
  vertical-align: top;
}
.container-item-change .title{
  display: inline-block;
  line-height: 30rpx;
  vertical-align: top;
  font-size: 24rpx;
}
.container-button{
  width: auto;
  display: inline-block;
  margin: 60rpx auto 20rpx;
  padding: 0 25rpx;
}