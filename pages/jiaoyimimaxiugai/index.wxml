<form bindsubmit='onSubmit'>
  <view class="wrapper mt40">
    <view class='inputwrap flex_row flex_row_center'>
      <view class='leftlabel size28 black3c ml32'>原密码</view>
      <input class='size28 black3c' placeholder-class='size28 gray99' placeholder='请输入原密码' type='password' name="orgPw"></input>
    </view>
    <view class='inputwrap flex_row flex_row_center'>
      <view class='leftlabel size28 black3c ml32'>新密码</view>
      <input class='size28 black3c' placeholder-class='size28 gray99' placeholder='请输入新密码' type='password' name="newPw"></input>
    </view>
    <view class='inputwrap flex_row flex_row_center'>
      <view class='leftlabel size28 black3c ml32'>确认新密码</view>
      <input class='size28 black3c' placeholder-class='size28 gray99' placeholder='请再次输入新密码' type='password' name="newPw2"></input>
    </view>
  </view>

  <view class='flex_row flex_center'>

    <button class='blue size28 mybutton' form-type="submit">保存</button>
  </view>
</form>