.hidden {
    display: none;
}

.main {
    margin-top: 80rpx;
    margin-bottom: 120rpx;
}

.index-swiper {
    width: 100%;
    height: 300rpx;
}

swiper-item {
    overflow: visible;
}

.swiper-img {
    background-size: 100%;
    background-clip: content-box;
    transform: scale3d(1,1,1);
    transition: transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out,-webkit-transform 0.3s ease-in-out;
}

.scale-big {
    transform: scale3d(1,1,1);
}

.scale-small {
    transform: scale3d(0.9,0.9,0.9);
}

.slide-image {
    display: block;
    width: 100%;
    height: 278rpx;
    background-size: 100%;
    border-radius: 10px;
    overflow: hidden;
}

.album-list-wrap {
    display: flex;
    flex-flow: column;
    background: #fff;
    margin-bottom: 0;
    overflow: hidden;
}

.list-header {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    font-family: PingFangSC-Light;
    color: #4a4a4a;
    padding: 40rpx 0;
    position: relative;
}

.list-header-inner {
    display: block;
    line-height: 1;
    font-size: 36rpx;
    position: relative;
}

.list-header-inner:before,.list-header-inner:after {
    position: absolute;
    top: 50%;
    content: '';
    width: 48rpx;
    height: 1rpx;
    background: #000;
}

.list-header-inner:before {
    left: -90rpx;
}

.list-header-inner:after {
    right: -90rpx;
}

.btn-more {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.icon-arrow-right {
    margin-left: 10rpx;
    width: 14rpx;
    height: 18rpx;
    background: url('https://img.alicdn.com/imgextra/i1/732450928/TB2QBj_XwJkpuFjSszcXXXfsFXa_!!732450928.png') no-repeat center;
    background-size: auto 100%;
}

.btn-show-more {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border: 1rpx solid #bcbcbc;
    height: 80rpx;
    margin: 0 33rpx 150rpx;
}

.btn-show-more-text {
    font-family: PingFangSC-Light;
    font-size: 32rpx;
    color: #4a4a4a;
    display: inline-block;
    margin-right: 20rpx;
}

.btn-show-more .icon-arrow-right {
    width: 14rpx;
    height: 18rpx;
    background: url('https://img.alicdn.com/imgextra/i1/732450928/TB2QBj_XwJkpuFjSszcXXXfsFXa_!!732450928.png') no-repeat center;
